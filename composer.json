{
    "name": "ngyuki/dbdatool",
    "description": "Database diff/apply tool.",
    "type": "library",
    "keywords": [ "database", "migrations" ],
    "homepage": "https://github.com/ngyuki/php-dbdatool",
    "license": "MIT",
    "authors": [
        { "name": "ngyuki", "email": "ngyuki.jp@gmail.com" }
    ],
    "config": {
        "platform": {
            "php": "7.0.10"
        }
    },
    "require": {
        "php": "~7.0.10|~7.1|~7.2",
        "symfony/console": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "ngyuki\\DbdaTool\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "bin": [
        "bin/dbdatool"
    ],
    "scripts": {
        "test": [
            "phpunit --colors=always"
        ],
        "coverage": [
            "phpdbg -qrr $(which phpunit) --colors=always --coverage-text --coverage-html=build/"
        ],
        "cs": [
            "php-cs-fixer fix --diff --dry-run --ansi -v"
        ],
        "phan": [
            "phan --color -p"
        ],
        "qa": [
            "@composer test",
            "@composer cs",
            "@composer phan"
        ],
        "build": [
            "@php -d phar.readonly=0 box.phar build -v"
        ]
    },
    "extra": {
        "dbdatool-config": ["config.php"]
    }
}
